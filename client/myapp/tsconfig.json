{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "files": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
